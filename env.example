# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# 관리자 계정 (Supabase에서 직접 생성)
ADMIN_EMAIL="admin@bonsai-auction.com"
ADMIN_PASSWORD="your-admin-password-here"

# 이메일 서비스 (SendGrid, AWS SES 등)
EMAIL_API_KEY="your-email-api-key"
EMAIL_FROM="noreply@bonsai-auction.com"

# 결제 시스템 (토스페이먼츠, 아임포트 등)
PAYMENT_API_KEY="your-payment-api-key"
PAYMENT_SECRET_KEY="your-payment-secret-key"

# 이미지 스토리지 (AWS S3, Cloudinary 등)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-northeast-2"
AWS_S3_BUCKET="bonsai-auction-images"

# Redis (캐싱 및 세션)
REDIS_URL="redis://localhost:6379"

# 모니터링 (Sentry)
SENTRY_DSN="your-sentry-dsn"

# 도메인
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_API_URL="https://your-domain.com/api"

# 개발/프로덕션 환경
NODE_ENV="development"
